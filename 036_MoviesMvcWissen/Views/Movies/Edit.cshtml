@model Movie
@{//web config namespace e eklediğimiz için tek movie yazdık
    ViewBag.Title = "Edit Movie";
    var years = ViewBag.Years as SelectList;//selectlist ile adamın seçtiği satırın yıldeğerini gösteriyoz
}

<h2>@ViewBag.Title</h2>

@*add.cshtmldeki gibi tablo yapmak yerine htmlhelper ilekolay yaparız,movies cont.da edit metodu içinde ve bu metot post metodu*@
@*@Html.BeginForm("Edit", "Movies", FormMethod.Post)
{

    bunun doğru yolu aşağıda using ile
}
@{
    Html.EndForm();
